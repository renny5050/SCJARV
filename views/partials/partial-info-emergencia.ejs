<div class="section-title mt-5">5. Contacto de Emergencia</div>

<div class="row mb-3">
  <div class="col-md-4">
    <label class="form-label">Primer Nombre</label>
    <input type="text" class="form-control" name="emer_primer_nombre" required>
  </div>
  <div class="col-md-4">
    <label class="form-label">Segundo Nombre</label>
    <input type="text" class="form-control" name="emer_segundo_nombre">
  </div>
  <div class="col-md-4">
    <label class="form-label">Primer Apellido</label>
    <input type="text" class="form-control" name="emer_primer_apellido" required>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-4">
    <label class="form-label">Segundo Apellido</label>
    <input type="text" class="form-control" name="emer_segundo_apellido">
  </div>
  <div class="col-md-4">
    <label class="form-label">Cédula de Identidad</label>
    <input type="text" class="form-control" name="emer_cedula" required>
  </div>
  <div class="col-md-4">
    <label class="form-label">Nacionalidad</label>
    <select class="form-select" name="emer_nacionalidad" required>
      <option value="">Seleccione</option>
      <option value="V">Venezolano</option>
      <option value="E">Extranjero</option>
    </select>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-4">
    <label class="form-label">Edad (años)</label>
    <input type="number" class="form-control" name="emer_edad" min="0" required>
  </div>
  <div class="col-md-4">
    <label class="form-label">Parentesco</label>
    <select class="form-select" name="emer_parentesco" required>
      <option value="">Seleccione una opción</option>
      <option value="madre">Madre</option>
      <option value="padre">Padre</option>
      <option value="abuela">Abuela</option>
      <option value="abuelo">Abuelo</option>
      <option value="tia">Tía</option>
      <option value="tio">Tío</option>
      <option value="hermana">Hermana</option>
      <option value="hermano">Hermano</option>
      <option value="prima">Prima</option>
      <option value="primo">Primo</option>
      <option value="madrastra">Madrastra</option>
      <option value="padrastro">Padrastro</option>
      <option value="tutora">Tutora</option>
      <option value="tutor">Tutor</option>
      <option value="otro">Otro</option>
    </select>
  </div>
  <div class="col-md-4">
    <label class="form-label">Ocupación</label>
    <input type="text" class="form-control" name="emer_ocupacion">
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-6">
    <label class="form-label">Teléfono</label>
    <input type="text" class="form-control" name="emer_telefono" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Dirección</label>
    <input type="text" class="form-control" name="emer_direccion" required>
  </div>
</div>