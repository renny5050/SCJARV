<div class="section-title">1. Datos del Estudiante</div>

<div class="row mb-3">
  <div class="col-md-3">
    <label class="form-label">Primer Nombre</label>
    <input type="text" class="form-control" name="primer_nombr" required>
  </div>
  <div class="col-md-3">
    <label class="form-label">Segundo Nombre</label>
    <input type="text" class="form-control" name="segundo_nomb">
  </div>
  <div class="col-md-3">
    <label class="form-label">Primer Apellido</label>
    <input type="text" class="form-control" name="primer_apell" required>
  </div>
  <div class="col-md-3">
    <label class="form-label">Segundo Apellido</label>
    <input type="text" class="form-control" name="segundo_apellido">
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-3">
    <label class="form-label">Fecha de Nacimiento</label>
    <input type="date" class="form-control" name="fecha_nacimiento" required>
  </div>
  <div class="col-md-3">
    <label class="form-label">Sexo</label>
    <select class="form-select" name="sexo" required>
      <option value="">Seleccione</option>
      <option value="M">Masculino</option>
      <option value="F">Femenino</option>
    </select>
  </div>
  <div class="col-md-3">
    <label class="form-label">Nacionalidad</label>
    <select class="form-select" name="nacionalidad" required>
      <option value="">Seleccione</option>
      <option value="V">Venezolano</option>
      <option value="E">Extranjero</option>
    </select>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-3">
    <label class="form-label">Cédula Escolar</label>
    <input type="text" class="form-control" name="cedu_escolar">
  </div>
  <div class="col-md-3">
    <label class="form-label">Peso</label>
    <input type="number" class="form-control" name="peso_kg" placeholder="Kg">
  </div>
  <div class="col-md-3">
    <label class="form-label">Talla</label>
    <input type="number" class="form-control" name="talla_m" placeholder="m">
  </div>
  <div class="col-md-3">
    <label class="form-label">Fecha de Inscripción</label>
    <input type="date" class="form-control" name="fecha_inscripcion">
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-3">
    <label class="form-label">Estado de Nacimiento</label>
    <input type="text" class="form-control" name="estad_nacimi" required>
  </div>
  <div class="col-md-3">
    <label class="form-label">Municipio de Nacimiento</label>
    <input type="text" class="form-control" name="munic_nacimi" required>
  </div>
  <div class="col-md-3">
    <label class="form-label">Viene Promovido de:</label>
    <input type="text" class="form-control" name="viene_promovido_de">
  </div>
  <div class="col-md-3">
    <label class="form-label">Institución</label>
    <input type="text" class="form-control" name="institucion">
  </div>
  <div class="row">
  <!-- Grupo Sanguíneo -->
  <div class="col-md-3">
    <label class="form-label">Grupo Sanguíneo</label>
    <select class="form-select" name="grupo_sangui">
      <option value="">Seleccione</option>
      <option value="A">A</option>
      <option value="B">B</option>
      <option value="AB">AB</option>
      <option value="O">O</option>
    </select>
  </div>

  <!-- Tipo (Factor Rh) -->
  <div class="col-md-3">
    <label class="form-label">Tipo (Factor Rh)</label>
    <select class="form-select" name="tip_sangrees">
      <option value="">Seleccione</option>
      <option value="+">Positivo (+)</option>
      <option value="-">Negativo (-)</option>
    </select>
  </div>
</div>
</div>
            
