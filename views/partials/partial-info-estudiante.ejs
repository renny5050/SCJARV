<div class="section-title">1. Datos del Estudiante</div>


  <div class="row mb-3">
    <div class="col-md-3">
      <label class="form-label">Primer Nombre</label>
      <input type="text" class="form-control" name="primer_nombr" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Segundo Nombre</label>
      <input type="text" class="form-control" name="segundo_nomb">
    </div>
    <div class="col-md-3">
      <label class="form-label">Primer Apellido</label>
      <input type="text" class="form-control" name="primer_apell" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Segundo Apellido</label>
      <input type="text" class="form-control" name="segundo_apellido">
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">
      <label class="form-label">Fecha de Nacimiento</label>
      <input 
        type="date" 
        class="form-control" 
        name="fecha_nacimiento" 
        id="fecha_nacimiento"
        required
      >
      <small class="text-muted">Debe tener al menos 3 años</small>
    </div>
    <div class="col-md-3">
      <label class="form-label">Sexo</label>
      <select class="form-select" name="sexo" required>
        <option value="">Seleccione</option>
        <option value="M">Masculino</option>
        <option value="F">Femenino</option>
      </select>
    </div>
    <div class="col-md-3">
      <label class="form-label">Nacionalidad</label>
      <select class="form-select" name="nacionalidad" required>
        <option value="">Seleccione</option>
        <option value="V">Venezolano</option>
        <option value="E">Extranjero</option>
      </select>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">
      <label class="form-label">Cédula Escolar</label>
      <input type="text" class="form-control" name="cedu_escolar">
    </div>
    <div class="col-md-3">
      <label class="form-label">Peso</label>
      <input 
        type="number" 
        class="form-control" 
        name="peso_kg" 
        placeholder="Kg"
        min="0"
        step="any"
      >
    </div>
    <div class="col-md-3">
      <label class="form-label">Talla</label>
      <input 
        type="number" 
        class="form-control" 
        name="tall_cm" 
        placeholder="cm"
        min="0"
        step="any"
      >
    </div>
    <div class="col-md-3">
      <!-- Campo oculto para fecha de inscripción -->
      <input 
        type="hidden" 
        name="fecha_inscripcion" 
        id="fecha_inscripcion"
      >
      <!-- Mensaje informativo para el usuario -->
      <div class="hidden-field-info">
        <strong>Fecha de inscripción:</strong> 
        <span id="fecha-inscripcion-text"></span>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">
      <label class="form-label">Estado de Nacimiento</label>
      <input type="text" class="form-control" name="estad_nacimi" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Municipio de Nacimiento</label>
      <input type="text" class="form-control" name="munic_nacimi" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Institución</label>
      <input type="text" class="form-control" name="institucion">
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-3">
      <label class="form-label">Grupo Sanguíneo</label>
      <select class="form-select" name="grupo_sangui">
        <option value="">Seleccione</option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="AB">AB</option>
        <option value="O">O</option>
      </select>
    </div>
    <div class="col-md-3">
      <label class="form-label">Tipo (Factor Rh)</label>
      <select class="form-select" name="tip_sangrees">
        <option value="">Seleccione</option>
        <option value="+">Positivo (+)</option>
        <option value="-">Negativo (-)</option>
      </select>
    </div>

    <div class="col-md-4">
    <label class="form-label">Mano que utiliza</label>
    <select class="form-select" name="mano_utiliza">
      <option value="">Seleccione</option>
      <option value="Derecha">Derecha</option>
      <option value="Izquierda">Izquierda</option>
    </select>
    </div>
  </div>


<style>
  .hidden-field-info {
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-radius: 4px;
    margin-top: 8px;
    font-size: 0.9em;
    border: 1px solid #dee2e6;
  }
</style>

<script>
  // Calcular fecha máxima permitida para nacimiento (3 años antes de hoy)
  document.addEventListener('DOMContentLoaded', function() {
    const today = new Date();
    
    // Configurar fecha de nacimiento (máximo 3 años antes)
    const maxDate = new Date();
    maxDate.setFullYear(today.getFullYear() - 3);
    const formattedMaxDate = maxDate.toISOString().split('T')[0];
    document.getElementById('fecha_nacimiento').setAttribute('max', formattedMaxDate);
    
    // Establecer fecha actual en el campo oculto de inscripción
    const formattedToday = today.toISOString().split('T')[0];
    document.getElementById('fecha_inscripcion').value = formattedToday;
    
    // Mostrar la fecha de inscripción al usuario
    document.getElementById('fecha-inscripcion-text').textContent = formattedToday;
  });
</script>