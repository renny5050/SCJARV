<div class="section-title mt-5">6. Ambiente Sociofamiliar</div>

<div class="row mb-3">
  <div class="col-md-4">
    <label class="form-label">Personas que viven en el hogar</label>
    <div class="mb-2">
      <input type="number" class="form-control" name="num_ninos" min="0" placeholder="Número de niños" required>
    </div>
    <div>
      <input type="number" class="form-control" name="num_adultos" min="0" placeholder="Número de adultos" required>
    </div>
  </div>
  <div class="col-md-4">
    <label class="form-label">Características de la vivienda</label>
    <select class="form-select" name="vivienda_caracteristicas" required>
      <option value="">Seleccione</option>
      <option value="Rancho">Rancho</option>
      <option value="Casa">Casa</option>
      <option value="Apto">Apartamento</option>
      <option value="Quinta">Quinta</option>
      <option value="Otro">Otro</option>
    </select>
  </div>
  <div class="col-md-4">
    <label class="form-label">Tenencia de la vivienda</label>
    <select class="form-select" name="vivienda_tenencia" required>
      <option value="">Seleccione</option>
      <option value="Propia">Propia</option>
      <option value="Pagada">Pagada</option>
      <option value="Alquilada">Alquilada</option>
      <option value="Otro">Otro</option>
    </select>
  </div>
</div>
