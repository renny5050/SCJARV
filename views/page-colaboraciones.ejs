<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="<%= '/css/layoutStyles.css' %>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
            --success-color: #2ecc71;
            --danger-color: #e74c3c;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --border-radius: 12px;
            --transition-speed: 0.3s;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            padding: 2rem;
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
            border-radius: var(--border-radius);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .form-container, 
        .table-container {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 2rem;
            transition: transform var(--transition-speed) ease, box-shadow var(--transition-speed) ease;
        }

        .form-container:hover,
        .table-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .colab-table {
            width: 100%;
            border-collapse: collapse;
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        .colab-table th {
            background-color: var(--primary-color);
            color: white;
            font-weight: 600;
            padding: 1rem;
            text-align: center;
        }

        .colab-table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #eee;
        }

        .colab-table tr:last-child td {
            border-bottom: none;
        }

        .colab-table tr:hover {
            background-color: #f8f9fa;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 0.4rem 0.8rem;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            color: white;
            border-radius: 8px;
            transition: all var(--transition-speed) ease;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .action-btn i {
            margin-right: 0.3rem;
        }

        .delete-btn { 
            background-color: var(--danger-color); 
        }

        .add-btn { 
            background-color: var(--success-color); 
        }

        .form-header {
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid rgba(52, 152, 219, 0.2);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 8px;
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
            transition: all var(--transition-speed) ease;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

        .form-text {
            margin-top: 0.3rem;
            font-size: 0.85rem;
            color: #6c757d;
        }

        .btn-container {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: 0.6rem 1.2rem;
            font-weight: 500;
            border-radius: 8px;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
            transition: all var(--transition-speed) ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 12px rgba(0, 0, 0, 0.15);
        }

        .error-alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 1rem 1.25rem;
            border-radius: var(--border-radius);
            margin-bottom: 1.5rem;
            border-left: 5px solid var(--danger-color);
            display: flex;
            align-items: center;
        }

        .error-alert i {
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        .no-colaboraciones {
            text-align: center;
            padding: 4rem 2rem;
            color: #6c757d;
            background-color: #fcfdff;
            border-radius: var(--border-radius);
            border: 1px dashed #dee2e6;
        }

        .no-colaboraciones i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #ced4da;
        }

        .required::after {
            content: " *";
            color: var(--danger-color);
        }

        .crud-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .student-info {
            background: linear-gradient(145deg, #e0f7ff, #f0faff);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(52, 152, 219, 0.2);
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.05);
        }

        .info-item {
            display: flex;
            margin-bottom: 1rem;
            padding: 0.75rem 1rem;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            transition: background-color var(--transition-speed) ease;
        }

        .info-item:hover {
            background-color: rgba(255, 255, 255, 1);
        }

        .info-label {
            font-weight: 600;
            min-width: 160px;
            color: var(--primary-color);
        }

        .info-value {
            flex-grow: 1;
        }

        @media (max-width: 768px) {
            .action-buttons {
                flex-direction: column;
            }

            .colab-table td, 
            .colab-table th {
                padding: 0.75rem;
                font-size: 0.9rem;
            }

            .info-item {
                flex-direction: column;
            }

            .info-label {
                min-width: auto;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: var(--primary-color);
            }

            .btn-container {
                flex-direction: column;
                gap: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <%- include('partials/partial-sidebar') %>
    <!-- Header -->
    <%- include('partials/partial-header') %>
    <main id="content">
        <div class="crud-container">
            <!-- Mensaje de error si existe -->
            <% if (error) { %>
                <div class="error-alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= error %>
                </div>
            <% } %>
            
            <!-- Formulario de creación -->
            <div class="form-container">
                <div class="form-header">
                    <h2><i class="fas fa-plus-circle me-2"></i>Nueva Colaboración</h2>
                    <p class="text-muted mb-0">Registre una nueva contribución</p>
                </div>
                
                <form id="colaboracionForm" action="/colaboraciones" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="cedula_escolar" class="form-label required">Cédula Escolar</label>
                                <input type="text" class="form-control" id="cedula_escolar" name="cedula_escolar" 
                                       value="<%= formData ? formData.cedula_escolar : '' %>" required>
                                <div class="form-text">Ingrese la cédula escolar del estudiante</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="fecha_dPagos" class="form-label required">Fecha de Pago</label>
                                <input type="date" class="form-control" id="fecha_dPagos" name="fecha_dPagos" 
                                       value="<%= formData ? formData.fecha_dPagos : '' %>" required>
                                <div class="form-text">Fecha de recepción</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="monto_dPagoS" class="form-label required">Monto (Bs.)</label>
                                <input type="number" step="0.01" min="0" class="form-control" id="monto_dPagoS" name="monto_dPagoS" 
                                       value="<%= formData ? formData.monto_dPagoS : '' %>" required>
                                <div class="form-text">Monto de la contribución</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Información del estudiante -->
                    <% if (studentInfo && studentInfo.inscripcion) { %>
                        <div class="student-info">
                            <h5 class="mb-3">Información del Estudiante</h5>
                            <div class="info-item">
                                <div class="info-label">Estudiante:</div>
                                <div class="info-value">
                                    <%= studentInfo.estudiante.primer_nombr %> 
                                    <%= studentInfo.estudiante.segundo_nomb || '' %> 
                                    <%= studentInfo.estudiante.primer_apell %> 
                                    <%= studentInfo.estudiante.segundo_apellido || '' %>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Cédula Escolar:</div>
                                <div class="info-value">
                                    <%= studentInfo.estudiante.cedu_escolar %>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Última Inscripción:</div>
                                <div class="info-value">
                                    Sección: <%= studentInfo.inscripcion.nombre_secci %>
                                    | Código: <%= studentInfo.inscripcion.cod_inscripc %>
                                    | Fecha: <%= new Date(studentInfo.inscripcion.fecha_inscripcion).toLocaleDateString() %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <div class="btn-container">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Registrar Colaboración
                        </button>
                    </div>
                </form>
            </div>
            
            <!-- Tabla de colaboraciones -->
            <div class="header text-center">
                <h1><i class="fas fa-hand-holding-heart me-2"></i>Colaboraciones Registradas</h1>
                <p class="lead mb-0">Historial de contribuciones</p>
            </div>
            
            <div class="d-flex justify-content-between mb-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-info-circle me-2 text-primary"></i>
                    <span>Total de colaboraciones: <strong><%= colaboraciones.length %></strong></span>
                </div>
            </div>
            
            <div class="table-container">
                <% if (colaboraciones.length > 0) { %>
                    <div class="table-responsive">
                        <table class="colab-table table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Estudiante</th>
                                    <th>Sección</th>
                                    <th>Fecha</th>
                                    <th>Monto</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% colaboraciones.forEach(function(colab) { %>
                                    <tr>
                                        <td><%= colab.cod_colabora %></td>
                                        <td><%= colab.nombre_estudiante %></td>
                                        <td><%= colab.seccion %></td>
                                        <td><%= new Date(colab.fecha_dPagos).toLocaleDateString() %></td>
                                        <td><%= colab.monto_dPagoS ? parseFloat(colab.monto_dPagoS).toFixed(2) : '0.00' %> Bs.</td>
                                        <td>
                                            <div class="action-buttons">
                                                <form action="/colaboraciones/<%= colab.cod_colabora %>" 
                                                      method="POST" style="display:inline;">
                                                    <button type="submit" class="btn action-btn delete-btn">
                                                        <i class="fas fa-trash"></i> Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="no-colaboraciones">
                        <i class="fas fa-inbox"></i>
                        <h4 class="mt-2">No hay colaboraciones registradas</h4>
                        <p class="text-muted mb-0">Comience agregando una nueva colaboración</p>
                    </div>
                <% } %>
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap @5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación de formulario
        const form = document.getElementById('colaboracionForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let valid = true;
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        valid = false;
                        field.classList.add('is-invalid');
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });
                if (!valid) {
                    e.preventDefault();
                    alert('Por favor complete todos los campos requeridos.');
                }
            });
        }
        
        // Confirmación para eliminar
        const deleteButtons = document.querySelectorAll('.delete-btn');
        deleteButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                if (!confirm('¿Está seguro que desea eliminar esta colaboración?')) {
                    e.preventDefault();
                }
            });
        });
        
        // Botón para verificar estudiante
        const verifyBtn = document.getElementById('verifyBtn');
        if (verifyBtn) {
            verifyBtn.addEventListener('click', function() {
                // Crear un formulario temporal para enviar la verificación
                const tempForm = document.createElement('form');
                tempForm.method = 'POST';
                tempForm.action = '/colaboraciones/verificar';
                
                // Obtener los datos del formulario principal
                const cedulaInput = document.getElementById('cedula_escolar');
                const cedulaValue = cedulaInput.value;
                
                // Crear input para cédula
                const cedulaField = document.createElement('input');
                cedulaField.type = 'hidden';
                cedulaField.name = 'cedula_escolar';
                cedulaField.value = cedulaValue;
                tempForm.appendChild(cedulaField);
                
                // Agregar al documento y enviar
                document.body.appendChild(tempForm);
                tempForm.submit();
            });
        }
        
        // Limpiar formulario
        const resetBtn = document.getElementById('resetBtn');
        if (resetBtn) {
            resetBtn.addEventListener('click', function() {
                form.reset();
            });
        }
    </script>
</body>
</html>